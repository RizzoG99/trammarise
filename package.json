{
  "name": "trammarise",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"API,Vite\" -c \"blue,green\" --kill-others-on-fail --restart-tries 3 --raw \"npm run dev:api\" \"npm run dev:vite\"",
    "dev:api": "tsx api-dev-server.js",
    "dev:vite": "vite",
    "dev:vercel": "vercel dev --yes",
    "build": "tsc -b && vite build",
    "build:sitemap": "node scripts/generate-sitemap.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "setup:ffmpeg": "bash scripts/setup-ffmpeg.sh",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "api-test": "vitest --config vitest.api.config.ts",
    "api-test:ui": "vitest --config vitest.api.config.ts --ui",
    "api-test:watch": "vitest --config vitest.api.config.ts --watch",
    "api-test:coverage": "vitest --config vitest.api.config.ts --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@dr.pogodin/react-helmet": "^3.0.5",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@openrouter/ai-sdk-provider": "^1.3.0",
    "@openrouter/sdk": "^0.2.6",
    "@react-pdf/renderer": "^4.3.2",
    "@vercel/node": "^1.6.1",
    "ai": "^5.0.121",
    "busboy": "^1.6.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.1",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.555.0",
    "node-fetch": "^3.3.2",
    "openai": "^6.9.1",
    "pdf-parse": "^2.4.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.10.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "uuid": "^11.0.4",
    "wavesurfer.js": "^7.11.1"
  },
  "overrides": {
    "esbuild": "^0.27.2",
    "path-to-regexp": "^8.3.0",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/busboy": "^1.5.4",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.10.1",
    "@types/node-fetch": "^2.6.13",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
