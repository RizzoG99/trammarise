    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vercel": "^50.3.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
}
